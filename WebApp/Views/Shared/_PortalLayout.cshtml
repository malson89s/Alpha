@*
    Fil: _PortalLayout.cshtml
    Detta är din master-layout för inloggat läge
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha Portal</title>

    <!-- Font & Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="portal">
        <div class="logotype">
            @await Html.PartialAsync("Partials/Components/_AlphaLogotype")
        </div>

        <div class="side">
            @await Html.PartialAsync("Partials/Components/_NavLinks")
        </div>

        <div class="top">
            <form class="search-form" method="get" novalidate>
                <i class="fas fa-magnifying-glass"></i>
                <input type="search" class="form-search-input" placeholder="Search anything..." />
            </form>

            <div id="settings-container">
                <button type="button" data-type="dropdown" data-target="#settings-dropdown" class="btn-settings">
                    <i class="fas fa-gear"></i>
                </button>
                <div id="settings-dropdown" class="dropdown hide">
                    <div class="dropdown-header">
                        <h5>Settings</h5>
                    </div>
                </div>
            </div>

            <div id="notification-container">
                <button type="button" data-type="dropdown" data-target="#notification-dropdown" class="btn-notification">
                    <i class="dot dot-red fa-solid fa-circle show"></i>
                    <i class="fas fa-bell"></i>
                </button>
                <div id="notification-dropdown" class="dropdown hide">
                    <div class="dropdown-header">
                        <h5>Notifications</h5>
                        <div class="badge badge-red">5</div>
                    </div>
                    <div class="dropdown-body">
                        <div class="notifications">
                            <div class="notification" data-notification-type="user">
                                <div class="user-image">
                                    <img src="~/images/Avatars/avatar-template.svg" alt="template avatar" />
                                </div>
                                <span class="message">Malin Sonneblom signed in</span>
                                <span class="time">1 min ago</span>
                                <button class="btn-close"></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="account-container">
                <button type="button" data-type="dropdown" data-target="#account-dropdown" class="btn-account">
                    <img src="~/images/Avatars/avatar-template.svg" alt="template avatar" />
                </button>
                <div id="account-dropdown" class="dropdown hide">
                    <div class="dropdown-header">
                        <div class="account-name">
                            <img src="~/images/Avatars/avatar-template.svg" alt="template avatar" />
                            <h6>Malin Sonneblom</h6>
                        </div>
                    </div>
                    <div class="dropdown-body">
                        <div class="dropdown-options">
                            <div class="dropdown-option">
                                <i class="fas fa-moon"></i>
                                <span>Dark Mode</span>
                            </div>
                            <div class="darkmode-toggle-switch">
                                <label class="switch">
                                    <input type="checkbox">
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="dropdown-footer">
                        <a class="btn btn-logout" asp-controller="Auth" asp-action="Logout">
                            <i class="fas fa-right-from-bracket"></i> Log out
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="main">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
